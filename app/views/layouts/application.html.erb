<!DOCTYPE html>
<html>
  <head>
    <title>OneSlotPayment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header> 
      <div class = "header-logo">
        <h1 class = "header-name">Payment</h1>
      </div>
      <%if user_signed_in?%>
      <div class = "header-lists">
        <div class = "header-list">
          <%= link_to current_user.nickname, root_path, class:"link" %>
        </div>
        <div class = "header-list">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class:"link" %>
        </div>
      </div>
      <%else%>
      <div class = "header-lists">
        <div class = "header-list">
          <%= link_to 'ログイン', new_user_session_path, class:"link" %>
        </div>
        <div class = "header-list">
          <%= link_to '新規登録', new_user_registration_path, class:"link" %>
        </div>
      </div>
      <%end%>
    </header>
    <%= yield %>
    <footer>
      <div>
        <h3 class = "footer-logo">Payment</h3>
      </div>
    </footer>
  </body>
</html>
