<div class="main">
  <div class = "main-head">
    <div class = "new-btn">
      <%= link_to '結果作成', new_sp_payment_path, class:"link-new" %>
    </div>
    <div class = "total">
      <p class = "total-price">Total収支10000円</p>
    </div>
  </div>
  <div class = "main-contents">
    <%@sp_payments.each do |sp_payment|%>
      <div class = "main-content">
        <div class="content-day">
          <%=sp_payment.month.name%>
          <%=sp_payment.day.name %>
        </div>
        <div class="comtent-medal">
          <%="#{sp_payment.medal}枚"%>
        </div>
        <div class="comtent-ball">
          <%="#{sp_payment.ball}玉"%>
        </div>
        <div class="btns">
        <%= link_to '詳細', "/#",  id:'btn',class: 'btn' %>
        </div>
      </div>
    <%end%>
  </div>
</div>


